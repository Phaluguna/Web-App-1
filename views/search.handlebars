<div class="jumbotron">
    <h3 class="page-header">Search Options</h3>
    {{#if errors}}
        <div class="alert alert-danger">
            <p>
                Please give atleast one field. 
            </p>
        </div>
    {{/if}}
    <form method="post" action="/search">
        <div class="form-group">
            <label>Street</label>
            <input type="text" class="form-control" placeholder="Street Address" name="street">
        </div>
        <div class="form-group">
            <label>City</label>
            <input type="text" class="form-control" placeholder="City" name="city">
        </div>
        <div class="form-group">
            <label>State</label>
            <input type="text" class="form-control" placeholder="State" name="state">
        </div>
        <div class="form-group">
            <label>ZIP Code</label>
            <input type="text" class="form-control" placeholder="ZIP Code" name="zipcode">
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
    </form>
</div>